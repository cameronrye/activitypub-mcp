# ActivityPub MCP Server Configuration - DEVELOPMENT
# Copy this file to .env and customize for your environment
# For production deployment, use .env.production.example as a template

# Environment
NODE_ENV=development

# MCP Server Configuration
MCP_SERVER_NAME=activitypub-mcp-server
MCP_SERVER_VERSION=1.0.0

# Logging Configuration (Development)
# Use 'debug' for development, 'info' for production
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_FILE=logs/activitypub-mcp.log

# HTTP Configuration (Development)
USER_AGENT=ActivityPub-MCP-Client/1.0.0
REQUEST_TIMEOUT=15000

# Default Instance (for examples and fallbacks)
DEFAULT_INSTANCE=example.social

# Server Configuration (Development)
PORT=8000
HOST=localhost
ACTIVITYPUB_BASE_URL=http://localhost:8000
ACTIVITYPUB_DOMAIN=localhost:8000

# Federation Configuration (Development)
FEDERATION_ENABLED=true
FEDERATION_QUEUE_TYPE=memory
FEDERATION_KV_TYPE=memory

# Security Configuration (Development)
ENABLE_CORS=true
# Development CORS - allows local development servers
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:5173
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Development/Debug Configuration
DEBUG=true
DEBUG_MODE=true
VERBOSE_LOGGING=true

# Optional: Database Configuration
# DATABASE_URL=sqlite:./data/activitypub.db
# DATABASE_URL=postgresql://user:password@localhost:5432/activitypub

# Optional: Redis Configuration
# REDIS_URL=redis://localhost:6379

# Optional: Security Keys
# PRIVATE_KEY_PATH=./keys/private.pem
# PUBLIC_KEY_PATH=./keys/public.pem
# JWT_SECRET=your-jwt-secret-here

# Optional: External Services
# SMTP_HOST=localhost
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASS=
# WEBHOOK_SECRET=your-webhook-secret

# Optional: Media Storage
# MEDIA_STORAGE_TYPE=local
# MEDIA_STORAGE_PATH=./media
# S3_BUCKET=
# S3_REGION=
# S3_ACCESS_KEY=
# S3_SECRET_KEY=

# Optional: Monitoring
# METRICS_ENABLED=false
# METRICS_PORT=9090
# HEALTH_CHECK_ENABLED=true
# HEALTH_CHECK_PATH=/health
