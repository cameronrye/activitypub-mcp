# ActivityPub MCP Server Configuration
# Copy this file to .env and customize for your environment

# Server Configuration
PORT=8000
HOST=localhost
ACTIVITYPUB_BASE_URL=http://localhost:8000
ACTIVITYPUB_DOMAIN=localhost:8000

# MCP Server Configuration
MCP_SERVER_NAME=activitypub-mcp-server
MCP_SERVER_VERSION=1.0.0

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/activitypub-mcp.log

# Federation Configuration
FEDERATION_ENABLED=true
FEDERATION_QUEUE_TYPE=memory
FEDERATION_KV_TYPE=memory

# Security Configuration
ENABLE_CORS=true
CORS_ORIGINS=*
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Development Configuration
NODE_ENV=development
DEBUG=false

# Optional: Database Configuration
# DATABASE_URL=sqlite:./data/activitypub.db
# DATABASE_URL=postgresql://user:password@localhost:5432/activitypub

# Optional: Redis Configuration
# REDIS_URL=redis://localhost:6379

# Optional: Security Keys
# PRIVATE_KEY_PATH=./keys/private.pem
# PUBLIC_KEY_PATH=./keys/public.pem
# JWT_SECRET=your-jwt-secret-here

# Optional: External Services
# SMTP_HOST=localhost
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASS=
# WEBHOOK_SECRET=your-webhook-secret

# Optional: Media Storage
# MEDIA_STORAGE_TYPE=local
# MEDIA_STORAGE_PATH=./media
# S3_BUCKET=
# S3_REGION=
# S3_ACCESS_KEY=
# S3_SECRET_KEY=

# Optional: Monitoring
# METRICS_ENABLED=false
# METRICS_PORT=9090
# HEALTH_CHECK_ENABLED=true
# HEALTH_CHECK_PATH=/health
