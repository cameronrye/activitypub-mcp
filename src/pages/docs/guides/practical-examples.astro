  }

  .analysis-insights {
    background: var(--color-blue-50);
    border: 1px solid var(--color-blue-200);
    border-radius: var(--radius-md);
    padding: var(--space-4);
  }

  .analysis-insights h4 {
    font-size: var(--text-md);
